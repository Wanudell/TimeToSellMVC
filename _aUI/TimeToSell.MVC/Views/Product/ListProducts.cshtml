@model ProductListViewModel


<div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Product Id</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Company Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model.Items)
            {
                <tr>
                    <td>@p.ProductId</td>
                    <td>@p.ProductName</td>
                    <td>@p.Price</td>
                    <td>@p.CompanyName</td>
                </tr>
            }
        </tbody>
    </table>
</div>